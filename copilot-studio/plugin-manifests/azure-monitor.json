{
  "openapi": "3.0.1",
  "info": {
    "title": "Azure Monitor Alerts API",
    "version": "1.0.0",
    "description": "Fetch active alerts from Azure Monitor"
  },
  "servers": [
    {
      "url": "https://management.azure.com",
      "description": "Azure Management API"
    }
  ],
  "paths": {
    "/subscriptions/{subscriptionId}/providers/Microsoft.AlertsManagement/alerts": {
      "get": {
        "summary": "Get active alerts",
        "operationId": "getActiveAlerts",
        "parameters": [
          {
            "name": "subscriptionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "api-version",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "default": "2021-05-01"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}
